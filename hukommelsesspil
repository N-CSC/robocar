def create_cards(size):
    images = ["billede1", "billede2", "billede3", "billede4"]  # Erstat med faktiske billednavne
    images *= 2  # Dobbelt op for at skabe par
    random.shuffle(images)
    return [(img, False) for img in images]  # Kort er ikke vendt

